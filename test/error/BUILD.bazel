[sh_test(
    name = "error_%s" % f[:f.rfind(".")],
    srcs = ["errorchecker"],
    args = [
        "mod" if (f[f.rfind(".") + 1:] == "chimod") else "func",
        "$(location %s)" % f,
        f[:f.find(".")],
    ],
    data = [f],
) for f in glob(["E*"])]

